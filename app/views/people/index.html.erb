<h1><%= Person.model_name.human(count: 2) %> (<%= @people.size %>)</h1>

<%= link_to t('create'), new_person_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= Person.human_attribute_name('first_name') %></th>
      <th scope="col"><%= Person.human_attribute_name('last_name') %></th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td>
          <div class="btn-group" role="group">
            <%= link_to t('show'), person, class: "btn btn-primary" %>
            <%= link_to t('edit'), edit_person_path(person), class: "btn btn-warning" %>
            <%= link_to t('destroy'), person, method: :delete, data: { confirm: t('please_confirm') }, class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
