<h1><%= Program.model_name.human(count: 2) %></h1>

<%= link_to t('create'), new_program_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th><%= Program.human_attribute_name('title') %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.title %></td>
        <td>
          <div class="btn-group" role="group">
            <%= link_to t('show'), program, class: "btn btn-primary" %>
            <%= link_to t('edit'), edit_program_path(program), class: "btn btn-warning" %>
            <%= link_to t('destroy'), program, method: :delete, data: { confirm: t('please_confirm') }, class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
