<h1><%= Involvement.model_name.human(count: 2) %> (<%= @involvements.size %>)</h1>

<%= link_to t('create'), new_role_person_path(@role), class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th><%= Involvement.human_attribute_name('person') %></th>
      <th></th>
    </tr>
  </thead>

  <tbody data-sortable data-sort-url="<%= sort_role_people_path(@role) %>">
    <% @involvements.each do |involvement| %>
      <tr data-id="<%= involvement.id %>">
        <td><span class="handle">â˜°</span></td>
        <td><%= involvement.person %></td>
        <td>
          <div class="btn-group" role="group">
            <%= link_to t('show'), role_person_path(@role, involvement), class: "btn btn-primary" %>
            <%= link_to t('edit'), edit_role_person_path(@role, involvement), class: "btn btn-warning" %>
            <%= link_to t('destroy'), role_person_path(@role, involvement), method: :delete, data: { confirm: t('please_confirm') }, class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
